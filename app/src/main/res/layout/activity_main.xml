<?xml version="1.0" encoding="utf-8"?>
<com.mapbox.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mapView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    mapbox:mapbox_cameraTargetLat="-8.827741894599471"
    mapbox:mapbox_cameraTargetLng="13.244361877441408"
    mapbox:mapbox_cameraZoom="12.0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selecione_uma_paragerem"
            android:textSize="20dp"
            android:textColor="@color/purple_700"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listaParagemView"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/voltarView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="7dp"
            android:elevation="200dp"
            android:textStyle="bold"
            android:text="Voltar"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnIndicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:textStyle="bold"
            android:text="@string/btnindicar" />

    </LinearLayout>

</com.mapbox.maps.MapView>